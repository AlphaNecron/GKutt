<UserControl x:Class="GKutt.Controls.LoadingOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Background="{StaticResource BackgroundImage}"
             xmlns:controls="http://schemas.modernwpf.com/2019"
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             mc:Ignorable="d">
    <controls:SimpleStackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <controls:ProgressRing Width="50" Height="50" IsActive="True" />
        <TextBlock FontSize="15" Text="{Binding Status}" />
    </controls:SimpleStackPanel>
</UserControl>